{
    "configurations": [
        {
            "name": "Linux WSL",
            "includePath": [
                "${workspaceFolder}/",
                "${workspaceFolder}/core/include",
                "${workspaceFolder}/lib"
            ],
            "defines": [
                "ARCH_TARGET=x86-64",
                "PLAT_TARGET=pc",
                "ABI_ALIGN=8"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "clang-x64",
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ],
    "version": 4
}