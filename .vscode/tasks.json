{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build",
			"command": "make -j$(nproc)",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"presentation": {
				"echo": true,
				"reveal": "never",
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"type": "shell",
			"label": "Clean",
			"command": "make clean",
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"presentation": {
				"reveal": "never",
				"panel": "shared"
			}
		},
		{
			"type": "shell",
			"label": "Launch QEMU",
			"linux": {
				"command": "./launch_qemu.sh"
			},
			"options": {
				"cwd": "${workspaceFolder}/scripts"
			},
			"isBackground": true,
			"problemMatcher": [],
			"dependsOn": [
				"Build"
			]
		},
		{
			"label": "Launch QEMU Debug",
			"type": "shell",
			"linux": {
				"command": [
					"tmux new-session -d -s qemu ./launch_qemu.sh -debug;",
					"sleep 1;"
				]
			},
			"options": {
				"cwd": "${workspaceFolder}/scripts"
			},
			"problemMatcher": [],
			"hide": true,
			"dependsOn": [
				"Build"
			]
		},
		{
			"label": "Create gdbinit",
			"type": "shell",
			"linux": {
				"command": "./create_gdbinit.sh ${workspaceFolder}/build/"
			},
			"options": {
				"cwd": "${workspaceFolder}/scripts"
			},
			"problemMatcher": [],
			"hide": true,
			"dependsOn": [
				"Launch QEMU Debug"
			]
		},
		{
			"label": "Kill TMUX",
			"type": "shell",
			"linux": {
				"command": "tmux kill-session -t qemu; echo ''"
			},
			"hide": true
		}
	]
}