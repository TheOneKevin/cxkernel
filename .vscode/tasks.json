{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": [
                "rm -rf build/cmake-build;",
                "mkdir build/cmake-build;",
                "cd build/cmake-build && ",
                "cmake -G 'Unix Makefiles' -DTARGET=${input:buildTarget} -DBUILD_TYPE=${input:buildType} -DCUSTOM_FILENAME=ON ${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make --no-print-directory -C build/cmake-build/",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make Tests",
            "type": "shell",
            "command": "make test --no-print-directory -C build/cmake-build/",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "Make Clean",
            "type": "shell",
            "command": "make clean --no-print-directory -C build/cmake-build/",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "absolute"
            }
        },
        {
            "label": "Launch QEMU Debug",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ],
            "command": "${workspaceFolder}/build/scripts/launch_qemu.sh"
        },
        {
            "label": "Launch QEMU Kernel Tests",
            "type": "shell",
            "command": [
                "qemu-system-i386 -display none",
                "-boot d -cdrom build/bin/LiquiDOS.iso -m 128 -enable-kvm -cpu host,-pae",
                "-chardev stdio,id=char0,logfile=logs/COM3.log",
                "-monitor pty -serial file:logs/COM1.log -serial null -serial chardev:char0"
            ],
            "problemMatcher": []
        },
        {
            "label": "Launch QEMU",
            "type": "shell",
            "linux": {
                "command": "qemu-system-i386 -boot d -cdrom build/bin/LiquiDOS.iso -m 256"
            },
            "windows": {
                "command": "qemu-system-i386 -boot d -cdrom build/bin/LiquiDOS.iso -m 256"
            },
            "problemMatcher": []
        },
        {
            "label": "Kill All QEMU Instances",
            "type": "shell",
            "command": "pkill qemu",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "buildTarget",
            "description": "Which target do you want to build for?",
            "options": [
              "x86_32",
              //"x86_64"
            ],
            "default": "x86_32"
        },
        {
            "type": "pickString",
            "id": "buildType",
            "description": "Which type of build do you want to configure for?",
            "options": [
              "Debug",
              "Release",
              "Integration_Test",
              "Unit_Test"
            ],
            "default": "Debug"
        },
    ]
}